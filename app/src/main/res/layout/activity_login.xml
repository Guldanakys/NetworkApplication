<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".login.LoginActivity">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/app_title"
        android:textStyle="bold"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="@dimen/login_margin_bottom"
        android:textColor="@color/colorPrimary"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/login_margin_start"
        android:layout_marginEnd="@dimen/login_margin_end">

        <EditText
            android:id="@+id/user_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_email"
            android:textSize="@dimen/login_edit_text"
            android:inputType="textEmailAddress" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/login_margin_start"
        android:layout_marginEnd="@dimen/login_margin_end"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/user_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_password"
            android:textSize="@dimen/login_edit_text"
            android:inputType="textPassword"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/user_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_button"
        android:layout_marginTop="@dimen/login_margin_top"
        android:layout_marginStart="@dimen/login_margin_start"
        android:layout_marginEnd="@dimen/login_margin_end"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/user_login_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_margin_top"
        android:layout_marginStart="@dimen/login_margin_start"
        android:layout_marginEnd="@dimen/login_margin_end"
        android:textSize="@dimen/login_edit_text"
        android:textAlignment="center"
        android:text="@string/login_registration" />

</LinearLayout>