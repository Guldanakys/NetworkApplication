<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/login_background"
    tools:context=".login.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_logo"/>

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_margin_top"
        android:text="@string/app_name"
        android:textSize="@dimen/app_title"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

        <EditText
            android:id="@+id/user_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/login_margin_start"
            android:layout_marginEnd="@dimen/login_margin_end"
            android:layout_marginTop="100dp"
            android:padding="10dp"
            android:background="@drawable/rounded_edit_text"
            android:hint="@string/login_email"
            android:textSize="@dimen/login_edit_text"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/user_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/login_margin_start"
            android:layout_marginEnd="@dimen/login_margin_end"
            android:layout_marginTop="@dimen/login_margin_top"
            android:background="@drawable/rounded_edit_text"
            android:padding="10dp"
            android:hint="@string/login_password"
            android:textSize="@dimen/login_edit_text"
            android:inputType="textPassword" />

    <Button
        android:id="@+id/user_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_button"
        android:layout_marginTop="@dimen/login_margin_top"
        android:layout_marginStart="@dimen/login_margin_start"
        android:layout_marginEnd="@dimen/login_margin_end"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"/>

    <TextView
        android:id="@+id/user_login_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_margin_top"
        android:layout_marginStart="@dimen/login_margin_start"
        android:layout_marginEnd="@dimen/login_margin_end"
        android:textSize="@dimen/login_edit_text"
        android:textAlignment="center"
        android:textColor="#383838"
        android:text="@string/login_registration" />

</LinearLayout>