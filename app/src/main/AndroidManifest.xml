<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.networkapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".simulation.SimulationActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".videos.VideoListActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".register.RegisterActivity"
            android:parentActivityName=".login.LoginActivity" />
        <activity
            android:name=".videos.VideoActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName=".videos.VideoListActivity" />
        <activity
            android:name=".quizes.QuizListActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".chapters.details.ChapterDetailsActivity"
            android:parentActivityName=".chapters.ChapterListActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".quizes.QuestionListActivity"
            android:parentActivityName=".quizes.QuizListActivity" />
        <activity
            android:name=".chapters.ChapterListActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>